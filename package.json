{
  "name": "baristaMatic",
  "version": "0.0.0",
  "description": "",
  "author": "kptang",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "clean": "rm -f dist/{css/*,js/*,images/*}",
    "scss": "node-sass --include-path app/styles -o dist/css app/styles/app.scss dist/css/app.css",
    "uglify": "mkdir -p dist/js && uglifyjs app/js/*.js -m -o dist/js/app.js && uglifyjs app/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin app/images/* -o dist/images",
    "serve": "browser-sync start --config \"bs-config.js\"",
    "build:templates": "npm-html2js -i \"app/js/*.html\" -o \"app/js/template.js\" -m \"baristaMatic.templates\"",
    "build:js": "npm run uglify",
    "build:images": "npm run imagemin",
    "build:all": "npm run scss && npm run build:images && npm run build:templates && npm run build:js && cp app/*.html dist/",
    "watch:css": "onchange \"app/styles\" -- npm run scss",
    "watch:js": "onchange \"app/js\" -- npm run build:js",
    "watch:images": "onchange \"app/images\" -- npm run build:images",
    "watch:index": "onchange \"app/*.html\" -- cp app/*.html dist/",
    "watch:templates": "onchange \"app/js/*.html\" -- npm run build:templates",
    "watch:all": "npm-run-all -p serve watch:images watch:css watch:js watch:templates watch:index",
    "postinstall": "npm run build:all && npm run watch:all",
    "start": "npm run build:all && npm run watch:all",
    "unit": "npm run build:templates && karma start karma.conf.js --single-run",
    "unit:watch": "npm run build:templates && karma start karma.conf.js"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.8",
    "browser-sync": "^2.12.8",
    "imagemin-cli": "^3.0.0",
    "jasmine-core": "^2.5.1",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "node-sass": "^3.7.0",
    "npm-html2js": "^0.1.8",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "uglify-js": "^2.6.2",
    "underscore": "^1.8.3"
  },
  "dependencies": {
    "angular": "^1.4.12",
    "bootstrap-sass": "^3.3.7"
  }
}
